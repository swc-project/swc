{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es2016"
        ],
        "module": "commonjs",
        "outDir": "./out",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "sourceMap": true,
        "rootDir": "src",
        // Required.
        "experimentalDecorators": true,
        // Consistently emit lf.
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        // 
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
    },
    "include": [
        "src/**/*"
    ]
}