{
    "test": ".*.ts$",
    "sourceMaps": true,
    "jsc": {
        "loose": true,
        "target": "es2020",
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true,
            "useDefineForClassFields": false
        }
    },
    "module": {
        "type": "commonjs",
        "strict": true,
        "strictMode": false,
        "lazy": false,
        "noInterop": false
    }
}