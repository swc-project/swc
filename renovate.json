{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "automergeType": "pr",
    "packageRules": [
        {
            "groupName": "npm",
            "matchDatasources": ["npm"]
        },
        {
            "groupName": "npm-dev",
            "matchDatasources": ["npm"],
            "matchDepTypes": ["devDependencies"],
            "automerge": true
        },
        {
            "groupName": "cargo",
            "matchDatasources": ["cargo"],
            "automerge": true
        },
        {
            "groupName": "cargo-dev",
            "matchDatasources": ["cargo"],
            "matchDepTypes": ["devDependencies"],
            "automerge": true
        }
    ]
}
